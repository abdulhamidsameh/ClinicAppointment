@model List<AppointmentRowViewModel>
@{
    ViewData["Title"] = "Index";
}
@if (TempData["Message"] is not null)
{
    <div id="myDiv">
        <div class="alert alert-success d-flex justify-content-between align-items-center">
            <div>@TempData["Message"]</div>
            <div><button onclick="Change()" id="btn" class="btn"><i class="fa-solid fa-xmark"></i></button></div>
        </div>
    </div>
}
<h1>All Appointments</h1>
<br />
<br />
<a asp-controller="Appointment" asp-action="Create" class="btn btn-primary">Create New Appointment</a>
<br />

@if (Model.Count() == 0)
{
    <div class="mt-4 alert alert-warning">
        <h3>There is No Appointments :(</h3>
    </div>
}
else
{
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <th>Patient Name</th>
                <th>Doctor Name</th>
                <th>Date</th>
                <th>Time</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Appointment in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(M => Appointment.PatientName)</td>
                    <td>@Html.DisplayFor(M => Appointment.DoctorName)</td>
                    <td>@Appointment.Start.ToString("yyyy-MM-dd")</td>
                    <td>@Appointment.Start.ToString("HH:mm") - @Appointment.End.ToString("HH:mm")</td>
                    <td>@Html.DisplayFor(M => Appointment.Status)</td>
                </tr>
            }
        </tbody>
    </table>
}

