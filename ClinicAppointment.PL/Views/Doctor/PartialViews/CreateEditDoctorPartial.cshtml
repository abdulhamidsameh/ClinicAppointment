@model DoctorViewModel
@inject IUnitOfWork _unitOfWork
@{
    var clinicsList = await _unitOfWork.Repository<Clinic>().GetAllAsync();

    var clinics = new SelectList(clinicsList,nameof(Clinic.Id),nameof(Clinic.Name));
}
<div class="form-group mb-5">
    <label asp-for="FullName" class="form-label"></label>
    <input asp-for="FullName" class="form-control" />
    <span asp-validation-for="FullName" class="text-danger"></span>
</div>
<div class="form-group mb-5">
    <label asp-for="Gender" class="form-label"></label>

    <select asp-for="Gender" class="form-control">
        <option value="">-- Select Gender --</option>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
    </select>
    <span asp-validation-for="Gender" class="text-danger"></span>
</div>

<div class="form-group mb-5">
    <label class="col-form-label" asp-for="Clinic"></label>
    <select class="form-control" asp-for="ClinicId" asp-items="@clinics">

        <option value="@null"> -- Select Clinic --</option>

    </select>

</div>