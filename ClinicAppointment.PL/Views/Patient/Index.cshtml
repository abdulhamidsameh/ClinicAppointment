@model IEnumerable<PatientViewModel>
@{
    ViewData["Title"] = "Index";
}
@if (TempData["Message"] is not null)
{
    <div id="myDiv">
        <div class="alert alert-success d-flex justify-content-between align-items-center">
            <div>@TempData["Message"]</div>
            <div><button onclick="Change()" id="btn" class="btn"><i class="fa-solid fa-xmark"></i></button></div>
        </div>
    </div>
}  
<h1>All Patients</h1>
<br />
<br />
<a asp-controller="Patient" asp-action="Create" class="btn btn-primary">Create New Patient</a>
<br />

@if (Model.Count() == 0)
{
    <div class="mt-4 alert alert-warning">
        <h3>There is No Patients :(</h3>
    </div>
}
else
{
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(_ => _.FullName)</th>
                <th>@Html.DisplayNameFor(_ => _.Gender)</th>
                <th>@Html.DisplayNameFor(_ => _.BirthDate)</th>
                <th>@Html.DisplayNameFor(_ => _.Phone)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Patient in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(M => Patient.FullName)</td>
                    <td>@Html.DisplayFor(M => Patient.Gender)</td>
                    <td>@Html.DisplayFor(M => Patient.BirthDate)</td>
                    <td>@Html.DisplayFor(M => Patient.Phone)</td>

                    <partial name="_ButtonsPartial" model="@Patient.Id"></partial>

                </tr>
            }
        </tbody>
    </table>
}