@model IEnumerable<Clinic>
@{
    ViewData["Title"] = "Index";
}

<h1>All Clinics</h1>
<br />
<br />
<a asp-controller="Clinic" asp-action="Create" class="btn btn-primary">Create New Clinic</a>
<br />

@if (Model.Count() == 0)
{
    <div class="mt-4 alert alert-warning">
        <h3>There is No Clinics :(</h3>
    </div>
}
else
{
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(_ => _.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var clinic in Model)
            {
                <tr>
                    <td>@clinic.Name</td>

                    <td>
                        <a asp-controller="Clinic"
                           asp-action="Details"
                           asp-route-id="@clinic.Id"
                           class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>

                    <td>
                        <a asp-controller="Clinic"
                           asp-action="Edit"
                           asp-route-id="@clinic.Id"
                           class="btn btn-success">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>

                    <td>
                        <a asp-controller="Clinic"
                           asp-action="Delete"
                           asp-route-id="@clinic.Id"
                           class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}